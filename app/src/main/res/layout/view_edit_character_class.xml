<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/tv_level"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textStyle="italic"
        android:typeface="sans"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/ib_increase"
        android:layout_toStartOf="@+id/ib_increase" />

    <ImageButton
        android:id="@+id/ib_increase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_keyboard_arrow_up"
        android:contentDescription="@string/add_level"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/ib_decrease"
        android:layout_toStartOf="@+id/ib_decrease"/>

    <ImageButton
        android:id="@+id/ib_decrease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_keyboard_arrow_down"
        android:contentDescription="@string/remove_level"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/ib_remove"
        android:layout_toStartOf="@+id/ib_remove"/>

    <ImageButton
        android:id="@+id/ib_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_remove_circle_outline"
        android:contentDescription="@string/remove_class"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

</RelativeLayout>