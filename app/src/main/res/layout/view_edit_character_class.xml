<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_name"
        style="@style/classView"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/tv_level"
        style="@style/classView"
        android:textSize="18sp"
        android:layout_width="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/tv_increase"
        android:layout_toStartOf="@+id/tv_increase" />

    <TextView
        android:id="@+id/tv_increase"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/tv_decrease"
        android:layout_toStartOf="@+id/tv_decrease"
        android:text="+"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/largeTextSize"/>

    <TextView
        android:id="@+id/tv_decrease"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/bt_remove"
        android:layout_toStartOf="@+id/bt_remove"
        android:text="-"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/largeTextSize"/>

    <TextView
        android:id="@+id/bt_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete"
        android:textColor="@android:color/holo_red_light"
        android:textSize="@dimen/largeTextSize"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

</RelativeLayout>